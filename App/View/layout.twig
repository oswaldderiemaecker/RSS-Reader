
{# layout principal #}
<!doctype html>

<html lang="fr-FR">
<head>
    <meta charset="UTF-8">
    <title>RSS Reader</title>
    <link rel="stylesheet" href="{{ url('index') }}bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="{{ url('index') }}bootstrap/css/bootstrap-responsive.css">
    <link rel="stylesheet" href="{{ url('index') }}css/default.css">

    <script type="text/javascript" src="{{ url('index') }}bootstrap/js/bootstrap.js"></script>
</head>
<body>
<header>
    <body data-spy="scroll" data-target=".navbar">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner"><section id="I-F" noNumber="1">

                <div class="container">
                    <a class="brand" href="#">RSS Reader</a>

                    <div class="nav-collapse collapse">
                        <p class="navbar-text pull-right">

                            <b>Nous sommes le {{ "now"|date("d/m/Y H:i") }} </b>
                        </p>
                        <ul class="nav" role="navigation">
                            <li><a href="{{ path("index") }}">Liste des articles</a></li>
                            <li><a href="{{ path("show-feeds") }}">Liste des flux</a></li>
                        </ul>
                    </div>
                </div>
        </div>
    </div>

</header>
<div id="content">
    {% block content %}
    {% endblock %}
</div>

<footer>

</footer>

</body>
</html>
